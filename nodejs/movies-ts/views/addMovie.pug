doctype html
html
	head
		title Add a new Movies
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
	body.m-4
		h1 New Movie
		form(action='/addMovie',method='POST')
			label.form-label Title
			input.form-control(name='title')
			label.form-label Director
			input.form-control(name='director')
			label.form-label Year
			input.form-control(name='year')
			input.btn.btn-primary.mt-4(value='save',type='submit')
